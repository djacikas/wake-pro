<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WakePro.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:WakePro"
    xmlns:views="clr-namespace:WakePro.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="WakePro">

   <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="MainPage" />

   <FlyoutItem Route="HomePage" FlyoutDisplayOptions="AsMultipleItems">
      <ShellContent Title="Home" ContentTemplate="{DataTemplate views:HomePage}"/>
   </FlyoutItem>
   
</Shell>
